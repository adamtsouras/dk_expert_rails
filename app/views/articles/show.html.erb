<%= form_for([@article, @article.drills.build]) do |f| %>
  <p>
    <p>Drill Name</p><br>
    <%= f.text_field :drill_name, :style => "margin-top:-10px;color:white;width:90%;height:35px;border:0px; background-color: #{333333};margin-bottom:20px;" %>
  </p>
    <p>
    <p>Drill Title</p><br>
